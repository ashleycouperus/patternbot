{
  "name": "Patternbot",
  "version": "0.1.0",
  "license": "GPL",
  "description": "A small GUI application for generating pattern libraries & style guides from a specific folder structure.",
  "author": "Thomas J Bradley <hey@thomasjbradley.ca>",
  "homepage": "https://github.com/thomasjbradley/patternbot",
  "bugs": "https://github.com/thomasjbradley/patternbot/issues",
  "private": true,
  "main": "patternbot.js",
  "config": {
    "patternLibFilename": "pattern-library.html",
    "commonFolder": "/common",
    "commonParsableFilenames": {
      "modulifier": "modules.css",
      "gridifier": "grid.css",
      "typografier": "type.css",
      "theme": "theme.css"
    },
    "imagesFolder": "/images",
    "imagesParsableFilenames": {
      "icons": "icons.svg"
    },
    "imagesUsableFilenames": {
      "logo": "logo.svg",
      "logo-256": "logo-256.svg",
      "logo-64": "logo-64.svg",
      "logo-32": "logo-32.svg",
      "logo-16": "logo-16.svg"
    },
    "patternsFolder": "/patterns",
    "pagesFolder": "/pages"
  },
  "dependencies": {
    "css": "^2.2.1",
    "cssnano": "^3.10.0",
    "electron-is": "^2.3.0",
    "es6-promisify": "^5.0.0",
    "front-matter": "^2.1.2",
    "fs-extra": "^2.0.0",
    "glob": "^7.1.1",
    "handlebars": "^4.0.6",
    "hex-rgb": "^1.0.0",
    "js-beautify": "^1.6.8",
    "marked": "^0.3.6",
    "merge-objects": "^1.0.5",
    "node-dir": "^0.1.16",
    "onchange": "^3.2.1",
    "parallelshell": "^2.0.0",
    "postcss-cli": "^2.6.0",
    "postcss-cssnext": "^2.9.0",
    "rgb-hex": "^2.1.0",
    "string": "^3.3.3",
    "strip-js": "^1.0.6"
  },
  "devDependencies": {
    "electron": "^1.4.15",
    "electron-builder": "^11.7.0"
  },
  "scripts": {
    "debug": "NODE_ENV=development electron patternbot.js",
    "start": "NODE_ENV=production electron patternbot.js",
    "postcss": "postcss -u postcss-cssnext --postcss-cssnext.browsers 'last 2 versions' -u cssnano",
    "build-css-patterns-common-delete": "rm -rf app/renderer/patterns-common/*.min.css",
    "build-css-patterns-common-copy": "for i in app/renderer/patterns-common/*.css; do cp \"$i\" \"${i/.css/.min.css}\"; done",
    "build-css-patterns-common-minify": "npm run postcss -- -d app/renderer/patterns-common/ app/renderer/patterns-common/*.min.css",
    "build-css-patterns-common": "npm run build-css-patterns-common-delete && npm run build-css-patterns-common-copy && npm run build-css-patterns-common-minify",
    "build-css-brand": "npm run postcss -- -o app/renderer/patterns/brand/brand.min.css app/renderer/patterns/brand/brand.css",
    "build-css-type": "npm run postcss -- -o app/renderer/patterns/typography/typography.min.css app/renderer/patterns/typography/typography.css",
    "build-css": "parallelshell 'npm run  build-css-patterns-common' 'npm run build-css-brand' 'npm run build-css-type'",
    "watch-css": "onchange '**/*.css' -e '**/*.min.css' -- npm run build-css",
    "pack-mac": "build -m --dir",
    "pack-win": "build -w --dir",
    "pack": "build -mw --dir",
    "pack-bg": "tiffutil -cathidpicheck ./build/background.png ./build/background@2x.png -out ./build/background.tiff",
    "build-mac": "npm run pack-bg && build -m",
    "build-win": "build -w",
    "build": "npm run build-mac && npm run build-win"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/thomasjbradley/patternbot.git"
  },
  "build": {
    "appId": "ca.thomasjbradley.patternbot",
    "copyright": "Â© Thomas J Bradley",
    "productName": "Patternbot",
    "compression": "maximum",
    "extend-info": "patternbot-extra.plist",
    "mac": {
      "target": "dmg",
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "iconUrl": "https://raw.githubusercontent.com/thomasjbradley/patternbot/master/build/icon.ico",
      "target": "nsis"
    },
    "dmg": {
      "title": "Install Patternbot",
      "iconSize": 100,
      "window": {
        "x": 200,
        "y": 200
      },
      "contents": [
        {
          "x": 494,
          "y": 270,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 210,
          "y": 270,
          "type": "file"
        }
      ]
    }
  }
}
